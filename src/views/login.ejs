<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-4 col-12">
        <div class="card shadow-sm">
            <div class="card-header text-center bg-info text-white">
                <h5>LOGIN</h5>
            </div>
            <div class="card-body">
                <form action="/login" method="POST" class="needs-validation" novalidate id="loginForm">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control" required />
                        <div class="invalid-feedback">
                            Por favor ingresa un email válido.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control" required />
                        <div class="invalid-feedback">
                            Por favor ingresa una contraseña válida.
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-info">Iniciar Sesión</button>
                    </div>
                </form>
                <!-- Enlace al registro -->
                <div class="text-center mt-3">
                    <p>¿No tienes una cuenta? <a href="/register" class="text-info">Regístrate aquí</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // JavaScript para habilitar la validación personalizada de Bootstrap
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('loginForm');

        form.addEventListener('submit', (event) => {
            if (!form.checkValidity()) {
                event.preventDefault(); // Evita el envío del formulario si no es válido
                event.stopPropagation();
            }
            form.classList.add('was-validated'); // Agrega las clases de validación
        });
    });
</script>

